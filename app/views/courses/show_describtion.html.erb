<div class="container-fluid">

    <div class="col-sm-2">
      <%= render "shared/sidenav" %>
    </div>
     <div class="col-sm-10">
     <div class="panel panel-primary">
         
         <div class="panel-heading">
          <h3 class="panel-title">课程时间地点信息</h3>
        </div>      
         <div class="panel-body" style="min-height: 450px">
          <table class="table table-striped table-hover">
              <tr>
                <th>课程名称:</th> <th><%= @course.name%></th>
              </tr>
               <tr>
                <th>上课地点:</th> <th><%= @course.class_room%></th>
              </tr>
        
               <tr>
                <th>上课时间:
                
                </th> <th>
                   <% week=['一','二','三','四','五','六','天']
                    
                   %>
                   星期<%= week[ @course.course_time[1].to_i-1] %>:
                       <%
                         i= @course.course_time[2].to_i*10+ @course.course_time[3].to_i
                         j= @course.course_time[4].to_i*10+ @course.course_time[5].to_i
                      
                        %>
                        第 <% for k in i..j-1 %>
                                 <%= k.to_s+'、' %>
                               <% end %>
                               <%= j %>
                         节
                     </th>
                 </tr>
                 <tr> <th>上课周次</td><td> <%= @course.course_week%></th>
                  </tr>
       </table>
     </div>
    </div>

    </div>
  </div>
