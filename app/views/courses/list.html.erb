<div class="container-fluid">
  <div class="row">
      <div class="col-sm-2">
      <%= render "shared/sidenav" %>
      </div>

    <div class="col-sm-10">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title">选修课程</h3>
        </div>
        <div class="panel-body" style="min-height: 450px">
          <table class="table table-striped table-hover">
            <thead>

            <tr>
              <th>课程编号</th>
              <th>课程名称</th>
              <th>课时/学分</th>
              <th>限选</th>
              <th>已选</th>
              <th>课程属性</th>
              <th>授课方式</th>
              <th>考试方式</th>
              <th>主讲教师</th>
              <th>上课节次</th>

            </tr>
            </thead>
            <tbody>

             <% @course.each do |course|

             %>
                <tr>

                  <td>  <% if student_logged_in? %>
                      <%= link_to  course_introduction_course_url(course) do%>
                      <%= course.course_code %>
          
                  <% end %>
                    <% end %>
                    
                     <% if teacher_logged_in? %>
                     
                     <%= link_to  update_introduction_course_url(course) do%>
                      <%= course.course_code %>
          
                  <% end %>
                     <%end%>
                  </td>
                  
                  
                  <td>
                   <%= link_to  show_describtion_course_url(course) do%>
                
                  <%= course.name %>
                  <% end %>
                    
                    </td>
                  <td><%= course.credit %></td>
                  <td><%= course.limit_num %></td>
                  <td><%= course.student_num %></td>
                  <td><%= course.course_type %></td>
                  <td><%= course.teaching_type %></td>
                  <td><%= course.exam_type %></td>
                  <td><%= course.teacher.name %></td>

                  <td><%=course.get_coursetime_for_str %></td>
                  <% if @isCanChosed %>
                      <td><%= link_to "加入课程", select_course_path(course), class: 'btn-sm btn-info' %></td>
                  <% else %>
                      <td><%= link_to "不在选课时间", select_course_path(course), class: 'btn-sm btn-info' %></td>
                  <% end %>
                </tr>

            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>


